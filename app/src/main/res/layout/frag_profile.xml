<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Frag_Profile">

    <!-- 프로필 이미지와 스토리 테두리 -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/circle_user_24"
        android:scaleType="centerCrop" />

    <!-- 사용자 이름 -->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="yangsyoon"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- 팔로워, 팔로잉, 포스트 수 -->
    <LinearLayout
        android:id="@+id/stats_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- 포스트 수 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/posts_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/posts_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="posts"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 팔로워 수 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/followers_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="303"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/followers_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="followers"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 팔로잉 수 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/following_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="320"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/following_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="following"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 프로필 수정 및 공유 버튼 -->
    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stats_layout"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <Button

            android:id="@+id/edit_profile_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit profile"
            android:background="@drawable/image_view_border"
            android:backgroundTint="@color/white"
            android:elevation="8dp"
            android:scaleType="center"
            android:layout_margin="8dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/share_profile_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share profile"
            android:background="@drawable/image_view_border"
            android:textColor="#000000"

            android:layout_margin="8dp"

            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 포스트, 비디오, 태그 아이콘 -->
    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_buttons"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/tab_posts"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_posts"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/tab_videos"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_videos"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/tab_tags"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_tags" />
    </LinearLayout>

    <!-- 포스트 이미지 -->
    <GridView
        android:id="@+id/posts_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs"
        android:numColumns="3"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="2dp"
        android:padding="2dp"
        android:background="#FFFFFF" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="Courses For You"
        android:textSize="20sp"
        android:textColor="#111111"
        >

    </TextView>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFCFCFCF"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

    </View>

    <EditText
        android:id="@+id/searchEditText"
        style="@style/SearchEditTextStyle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Search here" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/my_location"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="근처 코스" />

            <Button
                android:id="@+id/all_Button"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="전체" />

            <Button
                android:id="@+id/seoul_Button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="서울특별시" />

            <Button
                android:id="@+id/daegu_Button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="대구광역시" />

            <Button
                android:id="@+id/busan_Button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="부산광역시" />

            <Button
                android:id="@+id/incheon_Button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="인천광역시" />

            <Button
                android:id="@+id/ulsan_Button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="울산광역시" />

            <Button
                android:id="@+id/daejeon_Button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="대전광역시" />

            <Button
                android:id="@+id/gyeonggi_Button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="경기도" />

            <Button
                android:id="@+id/jeon_Button"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="전라" />

            <Button
                android:id="@+id/chung_Button"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="충청" />

            <Button
                android:id="@+id/gyeong_Button"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="경상" />

            <Button
                android:id="@+id/gangwon_Button"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="강원" />

            <Button
                android:id="@+id/jeju_Button"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button2_frag3"
                android:text="제주" />

        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="469dp"
        android:divider="?android:attr/dividerHorizontal"
        android:orientation="vertical"
        android:padding="8dp"
        android:showDividers="middle">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>
